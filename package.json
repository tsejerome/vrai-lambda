{
  "name": "vrai-lambda",
  "version": "1.0.0",
  "description": "VoiceRecorder AI Lambda Server - FFmpeg processing service",
  "main": "dist/app.js",
  "scripts": {
    "dev": "export NODE_ENV=dev && nodemon app.ts",
    "start": "node dist/app.js",
    "build": "tsc",
    "test": "jest --passWithNoTests",
    "fly:deploy": "fly deploy",
    "fly:logs": "fly logs",
    "fly:status": "fly status",
    "fly:watch": "fly deploy --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "node_modules/.+\\.(j|t)sx?$": "ts-jest"
    },
    "verbose": true,
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "node_modules/(?!axios)/\""
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.637.0",
    "@aws-sdk/lib-storage": "^3.637.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@google-cloud/firestore": "^4.2.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/minimatch": "^5.1.2",
    "axios": "^1.6.8",
    "bottleneck": "^2.19.5",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.0.3",
    "firebase-admin": "^9.0.0",
    "gettyimages-api": "^6.2.3",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.3.0",
    "koa-cors": "0.0.16",
    "koa-helmet": "^5.2.0",
    "koa-json-error": "^3.1.2",
    "koa-router": "^12.0.1",
    "lodash": "^4.17.21",
    "mongodb": "^3.6.0",
    "nodemon": "^2.0.4",
    "openai": "^5.10.1",
    "short-uuid": "^4.2.2",
    "sib-api-v3-sdk": "^8.2.1",
    "ts-node": "^10.9.2",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/ffprobe-static": "^2.0.3",
    "@types/isomorphic-fetch": "^0.0.36",
    "@types/jest": "^26.0.24",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-cors": "0.0.2",
    "@types/koa-helmet": "^5.2.0",
    "@types/koa-json-error": "^3.1.2",
    "@types/koa-jwt": "^3.3.0",
    "@types/koa-router": "^7.4.8",
    "@types/mongodb": "^3.5.26",
    "@types/node": "^17.0.45",
    "@types/uuid": "^8.3.0",
    "esbuild": "0.20.2",
    "jest": "^26.6.3",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.5.6",
    "typescript": "^4.9.5"
  }
}